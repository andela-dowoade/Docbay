md-dialog.full(aria-label="Editing" ng-init="init()")
	form(ng-submit="save()" name="form")
		md-toolbar.toolbar
			div.md-toolbar-tools
				md-input-container.push
					label Title
					input(ng-model="doc.title" required)
				span(flex)
				md-button(ng-click="save()" ng-disabled="form.$invalid") Save
				md-button(ng-click="close()") Close
		md-dialog-content
			div.md-dialog-content(flex)
				md-input-container.md-whiteframe-z2.full(flex)
					label
					textarea(class="full" ng-model="doc.content" columns="1" md-maxlength="1500" rows="500")
